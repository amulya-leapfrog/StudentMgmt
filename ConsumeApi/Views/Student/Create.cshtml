
@model IEnumerable<ConsumeApi.Models.CourseViewModel>

    <h1>Add New Student</h1>
<div class="col-md-4">


    <form method="post" action="@Url.Action("Create", "Student")" class="form">

        <div class="form-group">
            <label>First Name: </label>
            <div style="display:flex; flex-direction: column;">
                <input type="text" name="firstName" data-val="true" data-val-required="First name is required" />
                <span class="field-validation-valid" data-valmsg-for="firstName" data-valmsg-replace="true" style="margin-top: 2px; font-size:12px; color: red;"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Last Name: </label>
            <div style="display:flex; flex-direction: column;">
                <input type="text" name="lastName" data-val="true" data-val-required="Last name is required" />
                <span class="field-validation-valid" data-valmsg-for="lastName" data-valmsg-replace="true" style="margin-top: 2px; font-size:12px; color: red;"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Email: </label>
            <div style="display:flex; flex-direction: column;">
                <input type="email" name="email" data-val="true" data-val-required="Email is required" />
                <span class="field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true" style="margin-top: 2px; font-size:12px; color: red;"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Mobile: </label>
            <div style="display:flex; flex-direction: column;">
                <input type="text" name="mobile" data-val="true" data-val-required="Mobile is required" />
                <span class="field-validation-valid" data-valmsg-for="mobile" data-valmsg-replace="true" style="margin-top: 2px; font-size:12px; color: red;"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Student Type: </label>
            <div class="radioContainer" >
                <div>
                    <input type="radio" id="old" name="studentType" value="0" data-val="true" data-val-required="Student Type is required">
                    <label for="old">Old</label><br>
                </div>
                <div>
                    <input type="radio" id="new" name="studentType" value="1">
                    <label for="new">New</label><br>
                </div>
                <span class="field-validation-valid" data-valmsg-for="studentType" data-valmsg-replace="true" style="margin-top: 2px; font-size:12px; color: red;"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Course: </label>
            <select name="CourseId" data-val="true" data-val-required="Course is required">
                <option value="">--Select Course--</option>
                @foreach (var course in Model)
                {
                    <option value="@course.CourseId">@course.Name</option>
                }
            </select>
            <span class="field-validation-valid" data-valmsg-for="CourseId" data-valmsg-replace="true" style="margin-top: 2px; font-size:12px; color: red;"></span>
        </div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </form>
</div>

<div class="mt-2">
    <a asp-action="Index">Back To List</a>
</div>
